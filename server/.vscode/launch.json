{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "运行 org_chart",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/org_chart",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "console": "integratedTerminal"
        },
        {
            "name": "调试 org_chart",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/org_chart",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "设置断点",
                    "text": "-break-insert main",
                    "ignoreFailures": true
